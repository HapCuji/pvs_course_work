    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc debug server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server/mta_server",
            "args": [
                // "-remove cache"
                "0.0.0.0",
                "1996"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/server",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-gdb-set follow-fork-mode parent", // child parent
                    // "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "build server debug",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "gcc-5 debug test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server/test_mta",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/server",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build test debug",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}